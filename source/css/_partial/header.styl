#header 
  max-width: 710px
  width: 100%
  margin: 0 auto 1rem auto

  h1,
    .h1
      letter-spacing: 0.01em
      font-size: 2rem
      font-style: normal
      font-weight: 700
      color: $color-text
      margin-top: 0
      margin-bottom: 0
      antialias()

    h2,
    .h2
      position: relative
      font-size: 1rem
      font-weight: bold
      text-transform: none
      letter-spacing: normal
      margin-top: 0
      margin-bottom: 0
      color: $color-lightest

  a
    color: inherit
    text-decoration: none
    background: none

  .logo
    float: left
    margin-right: 20px
    width: logo-width
    height: logo-height
    background-repeat: no-repeat
    background-image: url($logo-url)
    background-size: logo-width logo-height
    border-radius: 5px
    box-shadow: 0px 0px 10px 0.03em rgba(#000000, 0.5);

  .nav
    letter-spacing: 0.01em;
    font-size: .8rem;
    font-style: normal;
    font-weight: 200;
    color: $color-accent;