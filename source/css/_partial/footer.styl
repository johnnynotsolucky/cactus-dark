#footer
  padding-top: 10px
  padding-bottom: 10px
  color: #666
  font-size: 11px
  max-width: 700px
  width: 100%
  margin: 0 auto 1rem auto
  vertical-align: top
  text-align: center
  ul
    margin: 0
    padding: 0
    list-style: none
  li
    display: inline-block
    vertical-align: middle
  li:last-child
    border-right: 0
    margin-right: 0
    a
      margin-right: 0
  a
    color: #666
  a:hover
    color: #999
  .footer-left
    height: 20px
    line-height: 20px
    vertical-align: middle

@media (min-width: 480px)
  #footer
    padding-top: 20px
    padding-bottom: 20px
    .footer-left
      float: left
    .footer-right
      float: right


