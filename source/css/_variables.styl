// Fonts
$font-family-body = "Quicksand", sans-serif;
$font-family-mono = "Quicksand", sans-serif, monospace
$font-family-tt = "Inconsolata", monospace
$font-size = 15px
$line-height = 1.725

// Colors
$color-background = #1d1f21
$color-link = $color-accent
$color-text = #c9cacc
$color-light = #cccccc
$color-lightest = #eeeeee
$color-accent = #2bbc8a
$ease-in-sine = cubic-bezier(0.47, 0, 0.745, 0.715)

// Logo
$logo-url = hexo-config("customize.logo.url")
logo-width = 0px + hexo-config("customize.logo.width")
logo-height = 0px + hexo-config("customize.logo.height")
