<header id="header">
    <a href="<%- url_for("/") %>">
        <%- (theme.customize.logo && theme.customize.logo.enabled ? '<div class="logo"></div>':'') %>
        <div id="title">
          <h1>
              <%= config.title %>
          </h1>
          <% if (config.subtitle) { %>
          <h2>
              <%= config.subtitle %>
          </h2>
          <% } %>
        </div>
    </a>
    <span class="nav">
        <a href="<%- url_for("/") %>">Home</a>
        <% if (site.posts.length > theme.customize.post_count) { %>
            <a href="<%- url_for("archives") %>">Archives</a>
        <% } %>
    </span>
    <section id="about">
      <% if (config.description) { %>
        <%- markdown(config.description) %>
      <% } %>
    </section>
</header>
